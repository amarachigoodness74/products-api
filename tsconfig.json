{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": [
    "node_modules",
    "./coverage",
    "./dist",
    "./test",
    "__tests__",
    "jest.config.js"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
